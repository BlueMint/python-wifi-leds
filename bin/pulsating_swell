#!/usr/bin/env python

import ast
import time

from optparse import OptionParser, OptionGroup

import wifileds

if __name__=="__main__":
    parser = OptionParser()
    parser.add_option('-a', '--address', default='192.168.1.100', help='wifi block ip address')
    parser.add_option('-p', '--port', type='int', default=50000, help='wifi block port address')
    parser.add_option('-b', '--bulbs', choices=['white', 'rgb'], default='rgb', help='choose the lights to run this effect')

    group = OptionGroup(parser, 'Effect options:')
    group.add_option('--duration', type='float', default=86400, help='length of time the effect will last')
    group.add_option('--fade-up-delay', type='float', default=0, help='delay between fade up commands')
    group.add_option('--fade-down-delay', type='float', default=0.01, help='delay between fade down commands')
    group.add_option('--on-duration', type='float', default=0.5, help='length of time for the lights to remain in the on position')
    group.add_option('--off-duration', type='float', default=0, help='length of time for the lights to remain in the off position')
    group.add_option('--colors', default='yellow', help='list of possible colors to choose from. `None`: Random selection of colors.')
    group.add_option('--color-changes', choices=['true', 'false'], default='true', help='boolean that judges if colors will be changed inside the effect')
    parser.add_option_group(group)

    (options, args) = parser.parse_args()

    led_connection = wifileds.limitlessled.connect(options.address, options.port)
    bulbs = options.bulbs

    options = ast.literal_eval(str(options))
    options['colors'] = options['colors'].split(',')
    options['color_changes'] = ast.literal_eval(options['color_changes'].title())
    del options['address']
    del options['port']
    del options['bulbs']

    if bulbs == 'rgb':
        led_connection.rgb.all_on()
        led_connection.rgb.effect('pulsating_swells', effect_options=options)
    elif bulbs == 'white':
        options['color_changes'] = False
        led_connection.white.all_on()
        led_connection.white.effect('pulsating_swells', effect_options=options)
